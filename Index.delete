        }
        /* Custom styles for the gradient text */
        .gradient-text {
            background: linear-gradient(90deg, #ec4899, #f97316, #8b5cf6);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            text-fill-color: transparent;
        }
        /* Custom styles for the progress bar animation */
        .progress-bar-inner {
            transition: width 0.5s ease-in-out;
        }
        /* Custom styles for the modal fade-in/out */
        .modal {
            transition: opacity 0.3s ease-in-out;
        }
        /* Styling for the Chart.js radar chart */
        .chart-container {
            position: relative;
            margin: auto;
            height: 40vh;
            width: 80vw;
            max-width: 450px;
        }
        /* Custom scrollbar for a better look */
        ::-webkit-scrollbar {
            width: 8px;
        }
        ::-webkit-scrollbar-track {
            background: #1f2937;
        }
        ::-webkit-scrollbar-thumb {
            background: #4f46e5;
            border-radius: 10px;
        }
        ::-webkit-scrollbar-thumb:hover {
            background: #6366f1;
        }
